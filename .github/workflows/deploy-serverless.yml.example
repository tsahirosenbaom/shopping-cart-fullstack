#!/bin/bash

echo "ğŸ› ï¸ Setting up local development environment..."

# Install frontend dependencies
if [ -d "frontend" ] && [ -f "frontend/package.json" ]; then
    echo "ğŸ“± Installing frontend dependencies..."
    cd frontend
    npm install
    cd ..
fi

# Install Node.js backend dependencies
if [ -d "backend/nodejs-search" ] && [ -f "backend/nodejs-search/package.json" ]; then
    echo "ğŸ” Installing Node.js search API dependencies..."
    cd backend/nodejs-search
    npm install
    cd ../..
fi

# Install serverless dependencies
if [ -d "backend/serverless" ]; then
    echo "âš¡ Installing serverless dependencies..."
    cd backend/serverless
    for func in src/*/; do
        if [ -f "$func/package.json" ]; then
            echo "Installing dependencies for $func"
            cd "$func"
            npm install
            cd ../..
        fi
    done
    cd ../..
fi

# Check .NET installation
if command -v dotnet &> /dev/null; then
    echo "âœ… .NET SDK found: $(dotnet --version)"
    
    # Restore .NET dependencies
    if [ -d "backend/dotnet-api" ] && [ -f "backend/dotnet-api/*.csproj" ]; then
        echo "ğŸ”§ Restoring .NET dependencies..."
        cd backend/dotnet-api
        dotnet restore
        cd ../..
    fi
else
    echo "âŒ .NET SDK not found. Please install .NET 8 SDK"
fi

# Check Node.js installation
if command -v node &> /dev/null; then
    echo "âœ… Node.js found: $(node --version)"
else
    echo "âŒ Node.js not found. Please install Node.js 18+"
fi

# Check AWS CLI
if command -v aws &> /dev/null; then
    echo "âœ… AWS CLI found: $(aws --version)"
else
    echo "âš ï¸  AWS CLI not found. Install for deployment: pip install awscli"
fi

# Check SAM CLI
if command -v sam &> /dev/null; then
    echo "âœ… SAM CLI found: $(sam --version)"
else
    echo "âš ï¸  SAM CLI not found. Install for serverless development"
fi

echo ""
echo "ğŸ¯ Development Commands:"
echo "npm run dev:frontend    # Start React app (port 3000)"
echo "npm run dev:backend     # Start .NET API (port 5002)"
echo "npm run dev:search      # Start Node.js API (port 3001)"
echo "npm run dev:serverless  # Start serverless locally (port 3000)"
echo ""
echo "âœ… Local development setup complete!"
EOF

